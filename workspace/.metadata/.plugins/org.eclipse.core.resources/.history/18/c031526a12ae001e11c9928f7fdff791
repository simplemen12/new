package day04;

public class For07 {

	public static void main(String[] args) {
		/*
		 *  이중 for문 
		 *  
		 *  for(int i=1; i<=5; i++){
		 *       for(int j=1; j<=5; j++){
		 *       실행문; 
		 *       }
		 *      }
		 *  별찍기 
		 *  ****** i=1, j=5 
		 *  ****** i=2, j=5
		 *  ****** i=3, j=5
		 *  ****** i=4, j=5
		 *  ****** i=5, j=5
		 *  
		 */
		
		for(int i=1; i<=5; i++) { //줄
			for(int j=1; j<=5; j++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
		}
		System.out.println("---------------------");
		
		/*
		 *  *i=1 j=1
		 *  **   i=2 j=2
		 *  ***  i=3 j=3
		 *  **** i=4 j=4
		 *  *****i=5 j=5
		 * 
		 */
		for(int i=1; i<=5; i++) { //줄
			
			for(int j=1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
		}
		System.out.println("-----------");
		
		/*
		 * ****** i=1 j=5
		 * *****  i=2 j=4
		 * ****   i=3 j=3
		 * ***
		 * **
		 * *
		 *     *
		 *    **
		 *   ***
		 *  ****
		 * 
		 */
	for(int i=1; i<=5; i++) { //줄
			
			for(int j=1; j<=5; j--) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
		}
	
		
		

	}

}
