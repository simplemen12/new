		/*
		 * 10개의 배열을 담을 수 있는 arr배열을 생성
		 * 1-10까지 값을 입력한 후 출력  
		 * 
		 */
		int arr[] = new int[10];
		
		 for(int i=0; i<arr.length; i++) {
			arr[i] = (int) (Math.random() * 10) + 1;
			System.out.print(arr[i]);
		 }
		 
		 System.out.println("----------------------");
		 int arr1[] = new int[10];
		 for(int i=0; i<arr1.length; i++) {
			 arr1[i]=i+1;
			 System.out.print(arr1[i]+"");
		 }

	}

}
